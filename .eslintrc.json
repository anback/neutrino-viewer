{
    "parser": "babel-eslint",
    
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "standard"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly",
        "TradingView": "readonly",
        "moment": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },

    "plugins": [
        "flowtype",
        "header"
    ],

    "rules": {
        "import/first":0,
        "import/no-webpack-loader-syntax":0,
        "no-new": 0,
        "no-console": 0,
        "no-unused-vars": 1,
        "indent":"error",
        "header/header": [2, "line", [" @flow"]],
        "camelcase": 0,
        "flowtype/define-flow-type": 1
    }
}